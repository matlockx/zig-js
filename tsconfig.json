{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    // "outDir":  "dist/",
    // "declarationDir": "dist/",
    "experimentalDecorators": true,
    "importHelpers": true,
    // "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svg"
  ]
}
