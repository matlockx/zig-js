{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir":  "dist/",
    "declaration": true,
    "declarationDir": "dist/",
    "experimentalDecorators": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ]
}